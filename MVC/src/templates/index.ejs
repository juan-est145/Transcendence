<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Pong Game</title>
  <link rel="stylesheet" href="/styles/dist/output.css">
  <link rel="shortcut icon" href="/favicon/favicon.png" type="image/x-icon">
  <script src="/scripts/dist/onlineSocket.js" defer></script>
</head>

<body class="bg-gray-900 text-white min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('components/navbar.ejs') %>

    <!-- Main Content -->
    <main class="flex flex-col items-center justify-center grow px-4 py-12 max-w-3xl mx-auto text-center">

      <header class="mb-10">
        <h1 class="text-5xl font-extrabold mb-4">Pong</h1>
        <p class="text-gray-400 max-w-lg mx-auto">
          Enjoy the classic Pong game and compete to be the best!
        </p>
      </header>

      <% if (!user) { %>
        <p class="text-red-400 mb-10">You must <a href="/auth/login" class="underline hover:text-red-600">log in</a>
          to play.</p>
      <% } %>

      <!-- Ranking -->
            <section class="w-full bg-gray-800 rounded-lg p-6 shadow-md">
              <h2 class="text-2xl font-bold mb-4">Top 5 Ranking</h2>
              <ol class="list-decimal list-inside space-y-2 text-gray-300">
                <li>Player1 — 150 points</li>
                <li>Player2 — 130 points</li>
                <li>Player3 — 120 points</li>
                <li>Player4 — 110 points</li>
                <li>Player5 — 100 points</li>
              </ol>
            </section>
    </main>
  <%- include('components/footer.ejs') %>
</body>

</html>
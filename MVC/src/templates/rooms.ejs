<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Rooms - Pong Game</title>
  <link rel="stylesheet" href="/styles/dist/output.css">
  <link rel="shortcut icon" href="/favicon/favicon.png" type="image/x-icon">
</head>

<body class="bg-gray-900 text-white min-h-screen flex flex-col">

  <%- include('components/navbar.ejs') %>

  <main class="flex flex-col items-center justify-center flex-grow px-4 py-12 max-w-6xl mx-auto">
    
    <header class="mb-10 text-center">
      <h1 class="text-5xl font-extrabold mb-4">Game Rooms</h1>
      <p class="text-gray-400 max-w-lg mx-auto">
        Create or join a room to play with friends
      </p>
    </header>

    <!-- Room Actions -->
    <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
      
      <!-- Create Room -->
      <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-bold mb-4">Create Room</h2>
        <form id="create-room-form" class="space-y-4">
          <div>
            <label for="room-name" class="block text-sm font-medium mb-2">Room Name</label>
            <input type="text" id="room-name" name="name" required
              class="w-full px-4 py-2 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="My Awesome Room">
          </div>
          <div>
            <label for="max-score" class="block text-sm font-medium mb-2">Max Score</label>
            <select id="max-score" name="maxScore"
              class="w-full px-4 py-2 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="3">3 Points</option>
              <option value="5" selected>5 Points</option>
              <option value="7">7 Points</option>
              <option value="10">10 Points</option>
            </select>
          </div>
          <button type="submit"
            class="w-full bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg transition font-semibold">
            Create Room
          </button>
        </form>
      </div>

      <!-- Join Room -->
      <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
        <h2 class="text-2xl font-bold mb-4">Join Room</h2>
        <form id="join-room-form" class="space-y-4">
          <div>
            <label for="room-code" class="block text-sm font-medium mb-2">Room Code</label>
            <input type="text" id="room-code" name="code" required maxlength="5"
              class="w-full px-4 py-2 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 uppercase text-center text-2xl tracking-widest"
              placeholder="ABCDE">
          </div>
          <button type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition font-semibold">
            Join Room
          </button>
        </form>
        <div class="mt-4">
          <a href="/" class="block text-center bg-gray-700 hover:bg-gray-600 px-6 py-3 rounded-lg transition font-semibold">
            Back to Home
          </a>
        </div>
      </div>

    </div>

    <!-- Current Room (Hidden by default) -->
    <div id="current-room-container" class="w-full max-w-4xl bg-gray-800 rounded-lg p-8 shadow-lg hidden">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold" id="current-room-name">Room Name</h2>
        <button id="leave-room-btn" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition">
          Leave Room
        </button>
      </div>

      <!-- Room Code Display -->
      <div class="bg-gray-700 rounded-lg p-6 mb-6 text-center">
        <p class="text-sm text-gray-400 mb-2">Share this code with your friend:</p>
        <div class="flex items-center justify-center gap-4">
          <p class="text-5xl font-bold tracking-widest" id="current-room-code">XXXXX</p>
          <button id="copy-code-btn" 
            class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition text-sm font-semibold"
            title="Copy code to clipboard">
            Copy
          </button>
        </div>
        <p id="copy-notification" class="text-green-400 text-sm mt-2 hidden">Copied to clipboard!</p>
      </div>

      <!-- Players -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="bg-gray-700 rounded-lg p-6">
          <h3 class="text-xl font-bold mb-4 text-blue-400">Player 1</h3>
          <div id="player1-info">
            <p id="player1-name" class="text-lg mb-2">Waiting...</p>
            <p id="player1-status" class="text-sm text-gray-400">Not Ready</p>
          </div>
        </div>
        <div class="bg-gray-700 rounded-lg p-6">
          <h3 class="text-xl font-bold mb-4 text-red-400">Player 2</h3>
          <div id="player2-info">
            <p id="player2-name" class="text-lg mb-2">Waiting...</p>
            <p id="player2-status" class="text-sm text-gray-400">Not Ready</p>
          </div>
        </div>
      </div>

      <!-- Ready Button -->
      <div class="text-center mb-6">
        <button id="ready-btn"
          class="bg-green-600 hover:bg-green-700 px-8 py-4 rounded-lg transition font-semibold text-lg disabled:opacity-50 disabled:cursor-not-allowed">
          Ready
        </button>
        <button id="unready-btn"
          class="bg-yellow-600 hover:bg-yellow-700 px-8 py-4 rounded-lg transition font-semibold text-lg hidden">
          Not Ready
        </button>
      </div>

      <!-- Start Game Button (appears when both ready) -->
      <div id="start-game-container" class="text-center hidden">
        <p class="text-green-400 font-bold mb-4 text-xl">Starting in 3...</p>
        <button id="start-game-btn"
          class="bg-blue-600 hover:bg-blue-700 px-12 py-4 rounded-lg transition font-semibold text-xl">
          Start Now
        </button>
      </div>
    </div>

    <!-- Available Rooms -->
    <section class="w-full max-w-4xl mt-10 bg-gray-800 rounded-lg p-6 shadow-lg">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold">Available Rooms</h2>
        <button id="refresh-rooms-btn" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition text-sm">
          Refresh
        </button>
      </div>
      <div id="available-rooms" class="space-y-3">
        <p class="text-gray-400 text-center">No available rooms</p>
      </div>
    </section>

  </main>

  <%- include('components/footer.ejs') %>

  <script src="/scripts/dist/rooms.js" type="module"></script>

</body>

</html>

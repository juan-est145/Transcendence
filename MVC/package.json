{
  "name": "mvc",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "c8 --exclude=\"**/*.dto.ts\" --exclude=\"test/**\" --exclude=\"src/plugins/**\" jest --detectOpenHandles --forceExit",
    "open-api": "mkdir -p ./schema && npx openapi-typescript https://api:4343/docs/json -o ./schema/api-schema.d.ts",
    "tailwind": "npx @tailwindcss/cli -i ./public/styles/style.css -o ./public/styles/dist/output.css",
    "tailwind:dev": "npx @tailwindcss/cli -i ./public/styles/style.css -o ./public/styles/dist/output.css --watch=always",
    "start": "NODE_ENV=production npm run tailwind && npm run build:client && npm run build:ts && npm run build:pong && npm run open-api && fastify start -l info -p 4343 dist/app.js --options",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "build:pong": "tsc -p client/tsconfig.json && vite build",
    "build:client": "tsc -p public/tsconfig.json",
    "watch:client": "tsc -p public/tsconfig.json -w",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:tailwind:dev\" \"npm:watch:client\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "npm run open-api && npm run build:pong && fastify start --ignore-watch='.ts$ db/' -w -l info -p 4343 -d -I 9320 -P dist/app.js --options"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babylonjs/core": "^8.27.0",
    "@babylonjs/gui": "^8.27.0",
    "@fastify/auth": "^5.0.2",
    "@fastify/autoload": "^6.0.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/sensible": "^6.0.0",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/view": "^11.1.0",
    "@fastify/vite": "^8.2.0",
    "@tailwindcss/cli": "^4.1.13",
    "@types/ejs": "^3.1.5",
    "babylonjs": "^8.27.0",
    "connect-session-knex": "^5.0.0",
    "earcut": "^3.0.2",
    "ejs": "^3.1.10",
    "express-session": "^1.18.2",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "knex": "^3.1.0",
    "minio": "^8.0.5",
    "openapi-fetch": "^0.14.0",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.11",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/earcut": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "fastify-tsconfig": "^3.0.0",
    "jest": "^30.1.3",
    "openapi-typescript": "^7.9.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  }
}

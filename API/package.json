{
  "name": "transcendence",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && c8 --exclude=\"**/*.dto.ts\" --exclude=\"test/**\" --exclude=\"src/plugins/**\" jest",
    "prisma": "prisma migrate dev --name dev && prisma generate",
    "start": "NODE_ENV=production npm run prisma && npm run build:ts && fastify start -l info -p 4343 dist/app.js --options",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run prisma && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch='.ts$ db/' -w -l info -p 4343 -d -I 9320 -P dist/app.js --options"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juan-est145/Transcendence.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/juan-est145/Transcendence/issues"
  },
  "homepage": "https://github.com/juan-est145/Transcendence#readme",
  "dependencies": {
    "@fastify/auth": "^5.0.2",
    "@fastify/autoload": "^6.0.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@prisma/client": "^6.12.0",
    "@sinclair/typebox": "^0.34.38",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/qrcode": "^1.5.5",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "fastify-tsconfig": "^3.0.0",
    "jest": "^30.1.3",
    "prisma": "^6.12.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.9.2"
  }
}
